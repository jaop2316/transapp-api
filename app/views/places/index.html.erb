<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="title-page">Sitios de Interes</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @places.each do |place| %>
        <tr>
          <td><%= place.name %></td>
          <td><%= place.category.name %></td>
          <td><%= link_to place_path(place) do %>
                <span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" title="show"></span>
                Ver
            <% end %>
          </td>
          <td><%= link_to edit_place_path(place) do %>
                <span class="glyphicon glyphicon-edit" data-toggle="tooltip" title="editar"></span>
                Editar
            <% end %>
          </td>
          <td><%= link_to place_path(place), method: :delete, data: {confirm: 'Esta seguro?'} do %>
                <span class="glyphicon glyphicon-remove-sign" data-toggle="tooltip" title="eliminar"></span>
                Eliminar
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar Sitio', new_place_path %>
</div>
