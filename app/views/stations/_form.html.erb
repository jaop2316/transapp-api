      <h2><%= pluralize(station.errors.count, "error") %> prohibited this station from being saved:</h2>

      <ul>
      <% station.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= form.label :image ,'Imagen'%>
      <%= form.file_field :image, id: :image, :class => 'form-control'%>
    </div>

  <div class="form-group">
    <%= form.label :name , 'Nombre'%>
    <%= form.text_field :name, id: :station_name, :class => 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :latitude , 'Latitud' %>
    <%= form.text_field :latitude, id: :station_latitude, :class => 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :longitude , 'Longitud' %>
    <%= form.text_field :longitude, id: :station_longitude, :class => 'form-control'%>
  </div>

    <div class="field">
      <%= form.label :Rutas ,'Rutas' %>
      <%= collection_select(:routes, :ids, @all_routes, :id, :name, {}, {:multiple => true}) %>
    </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary'%>
  </div>
<% end %>
