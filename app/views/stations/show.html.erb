<p id="notice"><%= notice %></p>

<div class="container stations-detail-page">
  <div class="row">
    <div class="col-md-12">
      <h1 class="title-page">
        <%= @station.name %>
      </h1>

      <p>
        <%= image_tag @station.image.url(:medium) %>
      </p>

      <fieldset>
        <legend> Informacion General</legend>
        <p>
          <strong>Latitud:</strong>
          <%= @station.latitude %>
        </p>

        <p>
          <strong>Longitud:</strong>
          <%= @station.longitude %>
        </p>


        <strong>Rutas:</strong>
        <ol>
          <%= @stations_routes_list.compact.each do |element| %>
              <li><%= element.name %></li>
          <% end %>
        </ol>

        <%= link_to 'Edit', edit_station_path(@station) %> |
        <%= link_to 'Back', stations_path %>

      </fieldset>
    </div>
  </div>
</div>



