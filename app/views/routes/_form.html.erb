<%= form_with(model: route, local: true) do |form| %>
    <% if route.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(route.errors.count, "error") %> prohibited this route from being saved:</h2>

          <ul>
            <% route.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= form.label :Nombre %>
      <%= form.text_field :name, id: :route_name, :class => 'form-control' %>
    </div>

    <fieldset>
      <legend>Horarios de Lunes a Viernes</legend>
      <div class="row">
        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :Flota, 'Flota (Numero de buses)' %>
            <%= form.text_field :flotaLV, id: :flotaLV, :class => 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :Horas, 'Horario' %>
            <%= form.text_field :horaLV, id: :horaLV, :class => 'form-control' %>
          </div>
        </div>


        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :IntervaloPico, 'Intervalo hora pico' %>
            <%= form.text_field :interLVP, id: :interLVP, :class => 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :IntervaloNormal, 'Intervalo horario normal' %>
            <%= form.text_field :interLVN, id: :interLVN, :class => 'form-control' %>
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>Horarios Sabado</legend>
      <div class="row">
        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :flotaS, 'Flota (Numero de buses)' %>
            <%= form.text_field :flotaS, id: :flotaS, :class => 'form-control' %>
          </div>
        </div>
        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :horaS , 'Horario' %>
            <%= form.text_field :horaS, id: :horaS, :class => 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :interSP, 'Intervalo hora pico'  %>
            <%= form.text_field :interSP, id: :interSP, :class => 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :interSN , 'Intervalo horario normal' %>
            <%= form.text_field :interSN, id: :interSN, :class => 'form-control' %>
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>Horarios Domingos y Feriados</legend>
      <div class="row">
        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :flotaDF, 'Flota (Numero de buses)' %>
            <%= form.text_field :flotaDF, id: :flotaDF, :class => 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :horaDF , 'Horario'%>
            <%= form.text_field :horaDF, id: :horaDF, :class => 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :interDFP ,'Intervalo hora pico'  %>
            <%= form.text_field :interDFP, id: :interDFP, :class => 'form-control' %>
          </div>
        </div>

        <div class="col-md-3 col-xs-12">
          <div class="form-group">
            <%= form.label :interDFN , 'Intervalo horario normal' %>
            <%= form.text_field :interDFN, id: :interDFN, :class => 'form-control' %>
          </div>
        </div>
      </div>
    </fieldset>

    <div class="form-group">
      <%= form.label :Observaciones %>
      <%= form.text_field :observations, id: :route_observations, :class => 'form-control' %>
    </div>


    <div class="actions">
      <%= form.submit :class => 'btn btn-primary' %>
    </div>
<% end %>
