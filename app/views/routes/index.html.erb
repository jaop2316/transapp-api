<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="title-page">Rutas</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Observaciones</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @routes.each do |route| %>
        <tr>
          <td><%= route.name %></td>
          <td><%= route.observations %></td>
          <td><%= link_to route_path(route) do %>
                <span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" title="eliminar"></span>
                Ver
            <% end %>
          </td>
          <td><%= link_to edit_route_path(route) do %>
                <span class="glyphicon glyphicon-edit" data-toggle="tooltip" title="editar"></span>
                Editar
            <% end %>
          </td>
          <td><%= link_to route_path(route), method: :delete, data: {confirm: 'Esta seguro?'} do %>
                <span class="glyphicon glyphicon-remove-sign" data-toggle="tooltip" title="eliminar"></span>
                Eliminar
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar Ruta', new_route_path %>
</div>
